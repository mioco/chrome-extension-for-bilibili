{
  "manifest_version": 2,

  "name": "bilibili-plugin",
  "description": "一些关于bilibili的偏好设置",
  "version": "1.0",
  "icons": {
    "48": "image/icon.png"
  },
  "browser_action": {
    "default_icon": "image/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.bilibili.com/*",
    "tabs",
    "storage",
    "cookies",
    "sessions",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [{
      "all_frames": true,
      "matches": ["*://*.bilibili.com/*"],
      "js": ["javascript/content.js"],
      "run_at": "document_end"
  }],
  "background": {
    "page": "background.html"
  }
}
